<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/app_006_cameraFacingIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/app_005_air_element" />

    <TextView
        android:id="@+id/app_006_cameraNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/app_006_cameraFacingIcon"
        android:layout_alignRight="@+id/app_006_cameraFacingIcon"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
