<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_003_linearItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/app_003_monsterItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/app_003_editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_003_edit_description"
        android:onClick="editMonsterName"
        android:src="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/app_003_removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_003_remove_description"
        android:onClick="removeMonster"
        android:src="@android:drawable/ic_menu_delete" /></LinearLayout>